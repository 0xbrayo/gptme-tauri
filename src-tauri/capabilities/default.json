{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "shell:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "bins/gptme-server",
          "sidecar": true,
          "args": [
            "--cors-origin",
            {
               "validator": "\\S+"
            }
          ]
        }      
      ]
    },
    "shell:allow-open"
  ]
}